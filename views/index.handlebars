<h1>Burgers!</h1>


<div class="container">
    <div class="row">
        <div class="col-md-6">

            <h2>Burgers that need to be eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Burgers that have been eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devour=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Eat this!</label><br>
        <input type="radio" name="devoured" value="1" checked> Devour it!!<br>
        <input type="radio" name="devoured" value="0"> Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>